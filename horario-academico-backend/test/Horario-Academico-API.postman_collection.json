        {
          "name": "Actualizar Usuario",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Ana Martínez Actualizado\",\n  \"rol\": \"admin\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/usuarios/1",
              "host": ["{{baseUrl}}"],
              "path": ["usuarios", "1"]
            },
            "description": "Actualizar datos de un usuario"
          }
        },
        {
          "name": "Eliminar Usuario",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/usuarios/1",
              "host": ["{{baseUrl}}"],
              "path": ["usuarios", "1"]
            },
            "description": "Eliminar un usuario (requiere rol admin)"
          }
        }
      ],
      "description": "CRUD de usuarios"
    },
